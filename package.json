{
  "name": "is-ignored",
  "version": "1.0.0",
  "description": "Check which files and directories in project are ignored for different platforms",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "bin/index.js",
  "scripts": {
    "build": "rimraf bin/* && tsc -p .",
    "prettier": "prettier --write 'src/**/*.ts'"
  },
  "repository": "https://github.com/JB1905/is-ignored.git",
  "engines": {
    "node": ">=10"
  },
  "bin": "bin/index.js",
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^13.1.6",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "git add"
    ]
  }
}
