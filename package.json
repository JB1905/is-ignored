{
  "name": "is-ignored",
  "version": "1.0.0",
  "description": "Check which files and directories in project are ignored for different platforms",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "bin/index.js",
  "scripts": {
    "build": "rimraf bin/* && tsc -p .",
    "prettier": "prettier --write 'lib/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awesome-cli/is-ignored.git"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "npm",
    "ignore-list",
    "git",
    "check",
    "node-modules",
    "exclude",
    "package"
  ],
  "bugs": {
    "url": "https://github.com/awesome-cli/is-ignored/issues"
  },
  "homepage": "https://github.com/awesome-cli/is-ignored#readme",
  "bin": {
    "is-ignored": "bin/index.js",
    "ii": "bin/index.js"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "figlet": "^1.4.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/node": "^13.13.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "lib/**/*.ts": [
      "npm run prettier"
    ]
  }
}
